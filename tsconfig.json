{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": ["es6", "es2015", "dom"],
        "sourceMap": true,
        "outDir": "dist",
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "removeComments": true,
        "noImplicitReturns": true,
        "baseUrl": "./src",
        "rootDirs": [
            "./src"
        ],
        "typeRoots": [
            "node_modules/@types"
        ],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
    },
    "include": [
      "./src/**/*.ts"
    ],
    "exclude": [
      "./node_modules/*",
      "dist"
    ],
  }
